<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="4">
                <img src="@Sentient.Id" style="width: 100%;">
            </MudItem>
            <MudItem xs="8">
                <br />
                <MudText Typo="Typo.h4" Align="Align.Center">@Sentient.Name</MudText>
                <br />
                <MudText Typo="Typo.body1" Align="Align.Center">@Sentient.Bio</MudText>
                <br />
                @foreach (string link in Sentient.Links)
                {
                    <center>
                        <MudLink Href="@link" Typo="Typo.caption">@link</MudLink>
                    </center>
                }
            </MudItem>
        </MudGrid>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] public MudDialogInstance Dialog { get; set; }
    [Parameter] public Sentient Sentient { get; set; }
}
